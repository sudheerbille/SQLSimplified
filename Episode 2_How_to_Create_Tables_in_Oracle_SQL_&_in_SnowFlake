-- Snowflake code block --
-- SET CONTEXT --
USE ROLE SYSADMIN;
USE DATABASE EMPLOYEES;
USE SCHEMA PUBLIC;

-- First & Primary Method --
-- Syntax  & Example--
CREATE OR REPLACE TABLE TABLE_NAME (COLUMN1 DATATYPE, COLUMN2 DATATYPE, COLUMN DATATYPE)

CREATE OR REPLACE TABLE EMPLOYEES (FIRST_NAME VAARCHAR2(80), LAST_NAME VARCHAR2(80), EMAIL_ID VARCHAR2(80));

-- Second method create a table by copying the structure of an existing table --

-- Syntax & Example --
CREATE OR REPLACE TABLE NEW_TABLE_NAME LIKE EXISTING_TABLE_NAME;

CREATE OR REPLACE TABLE EMPLOYEES1 LIKE EMPLOYEES;

-- Syntax & Example --
CREATE OR REPLACE TABLE NEW_TABLE_NAME AS SELECT * FROM EXISTING_TABLE_NAME WHERE 1=2;

CREATE OR REPLACE TABLE EMPLOYEES2 AS SELECT * FROM EMPLOYEES WHERE 1=2;

-- Third method create a table by copying the structure of an existing table along with data --
-- Syntax & Example --
CREATE OR REPLACE TABLE NEW_TABLE_NAME AS SELECT * FROM EXISTING_TABLE_NAME;

CREATE OR REPLACE TABLE EMPLOYEES3 AS SELECT * FROM EMPLOYEES;

-- Syntax & Example --
CREATE OR REPLACE TABLE NEW_TABLE_NAME CLONE EXISTING_TABLE_NAME;

CREATE OR REPLACE TABLE EMPLOYEES4 CLONE EMPLOYEES;

-- Oracle Code block --

-- First & Primary Method --
-- Syntax  & Example--
CREATE TABLE TABLE_NAME (COLUMN1 DATATYPE, COLUMN2 DATATYPE, COLUMN DATATYPE)

CREATE TABLE EMPLOYEES (FIRST_NAME VAARCHAR2(80), LAST_NAME VARCHAR2(80), EMAIL_ID VARCHAR2(80));

-- Second method create a table by copying the structure of an existing table --
-- Syntax & Example --
CREATE OR REPLACE TABLE NEW_TABLE_NAME AS SELECT * FROM EXISTING_TABLE_NAME WHERE 1=2;

CREATE OR REPLACE TABLE EMPLOYEES2 AS SELECT * FROM EMPLOYEES WHERE 1=2;

-- Third method create a table by copying the structure of an existing table along with data --
-- Syntax & Example --
CREATE OR REPLACE TABLE NEW_TABLE_NAME AS SELECT * FROM EXISTING_TABLE_NAME;

CREATE OR REPLACE TABLE EMPLOYEES3 AS SELECT * FROM EMPLOYEES;
